<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="2.0" init="Application">
    <Setting Name="TicketRocketChat::Webhook" Required="0" Valid="1">
        <Description Translatable="1">Defines the RocketChat webhook url</Description>
        <Navigation>RocketChatWebHook</Navigation>
        <Value>
            <Item ValueType="String" ValueRegex="">RocketChat Webhook URL</Item>
        </Value>
    </Setting>
    <Setting Name="TicketRocketChat::Channel" Required="0" Valid="1">
        <Description Translatable="1">Defines the RocketChat channel name for each queue.</Description>
        <Navigation>RocketChatQueueChannel</Navigation>
        <Value>
            <Hash>
                <Item Key="Misc">#misc</Item>
                <Item Key="Postmaster">#postmaster</Item>
                <Item Key="Helpdesk">#helpdesk</Item>
            </Hash>
        </Value>
    </Setting>
</otrs_config>
